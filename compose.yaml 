version: '3.8'

services:
  api:
    build: .
    container_name: scoring-api
    ports:
      - "8000:8000"
    volumes:
      - ./logs:/app/logs
      - ./output:/app/output
      - ./models:/app/models
    environment:
      - PYTHONUNBUFFERED=1
    command: uvicorn api.main:app --host 0.0.0.0 --port 8000
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/docs"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

  monitoring:
    build: .
    container_name: scoring-monitoring
    ports:
      - "8501:8501"
    volumes:
      - ./logs:/app/logs
      - ./output:/app/output
      - ./models:/app/models
    environment:
      - PYTHONUNBUFFERED=1
    command: streamlit run monitoring/app.py --server.host 0.0.0.0 --server.port 8501
    depends_on:
      api:
        condition: service_healthy